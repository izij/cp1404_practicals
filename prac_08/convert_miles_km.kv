BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
    Button:
        id: conversion_button
        text: 'Convert miles to km'
        on_press: app.handle_calculation(input_number.text)
    Label:
        id: output_label
        text: app.result_message
        color: (1, 1, 0, 1)
